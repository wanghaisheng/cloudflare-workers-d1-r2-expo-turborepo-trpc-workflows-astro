---
interface Invite {
  id: string;
  title: string;
  description: string;
  type: 'free' | 'trade' | 'sale';
  price?: number;
  timeAgo: string;
  user: {
    name: string;
    avatar: string;
  };
  icon: string;
}

const invites: Invite[] = [
  {
    id: '1',
    title: 'ChatGPT Plus 会员邀请',
    description: '分享 ChatGPT Plus 会员邀请码，使用后可获得优先访问权限和新功能体验。',
    type: 'free',
    timeAgo: '2小时前',
    user: {
      name: '张先生',
      avatar: 'https://via.placeholder.com/30'
    },
    icon: 'robot'
  },
  {
    id: '2',
    title: 'Spotify 家庭计划邀请',
    description: '提供 Spotify 家庭计划邀请位，希望换取 Netflix 或 Disney+ 会员邀请。',
    type: 'trade',
    timeAgo: '5小时前',
    user: {
      name: '音乐爱好者',
      avatar: 'https://via.placeholder.com/30'
    },
    icon: 'music'
  },
  {
    id: '3',
    title: 'GitHub Copilot 内测邀请',
    description: '出售 GitHub Copilot 内测邀请码，AI编程助手，提高编码效率。',
    type: 'sale',
    price: 30,
    timeAgo: '昨天',
    user: {
      name: '程序员小王',
      avatar: 'https://via.placeholder.com/30'
    },
    icon: 'code'
  },
  {
    id: '4',
    title: 'YouTube Premium 家庭组',
    description: '分享 YouTube Premium 家庭组邀请，无广告观看视频，支持后台播放。',
    type: 'free',
    timeAgo: '2天前',
    user: {
      name: '视频达人',
      avatar: 'https://via.placeholder.com/30'
    },
    icon: 'video'
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">最新邀请码</h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        查看最近分享的热门邀请码
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {invites.map((invite) => (
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <div class="h-40 bg-gray-100 flex items-center justify-center">
            <i class={`fas fa-${invite.icon} text-4xl text-gray-400`}></i>
          </div>
          
          <div class="p-6">
            <div class="flex justify-between items-center mb-4">
              <span class={`px-3 py-1 rounded-full text-sm font-medium ${
                invite.type === 'free' ? 'bg-success text-white' :
                invite.type === 'trade' ? 'bg-warning text-gray-900' :
                'bg-accent text-white'
              }`}>
                {invite.type === 'free' ? '免费分享' :
                 invite.type === 'trade' ? '换取' :
                 `出售 ¥${invite.price}`}
              </span>
              <span class="text-sm text-muted-foreground">{invite.timeAgo}</span>
            </div>
            
            <h3 class="text-xl font-bold mb-2">{invite.title}</h3>
            <p class="text-muted-foreground mb-4">{invite.description}</p>
            
            <div class="flex justify-between items-center">
              <div class="flex items-center">
                <img 
                  src={invite.user.avatar} 
                  alt={invite.user.name}
                  class="w-8 h-8 rounded-full mr-2"
                />
                <span class="text-sm font-medium">{invite.user.name}</span>
              </div>
              <a 
                href={`/invite/${invite.id}`}
                class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
              >
                查看详情
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/browse"
        class="inline-block px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors"
      >
        查看更多邀请码
      </a>
    </div>
  </div>
</section> 